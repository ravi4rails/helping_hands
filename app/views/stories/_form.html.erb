<%= form_with(model: story, local: true) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control form-control-lg', rows: 10 %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Back', stories_path, class: 'btn btn-secondary btn-lg' %>
  </div>
<% end %>
