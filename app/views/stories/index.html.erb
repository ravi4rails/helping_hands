<div class="container">
  <div class="row mt-5">
    <div class="col-md-9">
      <%= link_to 'Create Your Story', new_story_path, class: 'btn btn-primary btn-lg mb-4' %>
      <% @stories.each do |story| %>
        <%= link_to story, class: 'story-link' do %>
          <div class="card shadow border-0 mb-4">
            <div class="card-body">
              <h2><%= story.title %></h2>
              <% if story.description.length > 100 %>
                <p><%= truncate(story.description, length: 100) %></p>
              <% else %>
                <p><%= story.description %></p>
              <% end %>
              <h6>By <span class="text-primary"><%= story.user.name %></span></h6>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>

<style type="text/css">
  .story-link, .story-link:hover {
    text-decoration: none;
    color:black;
  }
</style>
