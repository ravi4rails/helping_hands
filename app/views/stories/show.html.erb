<div class="container">
  <div class="row mt-5">
    <div class="col-md-9">
      <div class="card shadow">
        <div class="card-header">
          <h2><%= @story.title %></h2>
        </div>
        <div class="card-body">
          <p><%= @story.description %></p>
          <h6>By <span class="text-primary"><%= @story.user.name %></span></h6>
          <div class="mt-3">
            <%= link_to 'Edit', edit_story_path(@story), class: 'btn btn-primary btn-lg' %>
            <%= link_to 'Back', stories_path, class: 'btn btn-secondary btn-lg' %>
          </div>
        </div>
      </div>
      <div class="card shadow mt-5">
        <div class="card-body">
          <p>Let <span class="font-weight-bold text-primary"><%= @story.user.name %></span> know that you are ready to help. Write in the below textarea how you can help.</p>
          <textarea rows='5' class="form-control form-control-lg"></textarea>
          <button type="button" class="btn btn-primary btn-lg mt-3">Submit</button>
        </div>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
